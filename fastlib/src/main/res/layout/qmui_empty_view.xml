<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.song.fast.widget.LineRotateLoadingView
        android:id="@+id/empty_view_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:color="#333"
        android:visibility="gone"
        app:loading_view_size="30dp" />

    <TextView
        android:id="@+id/empty_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:textColor="#666"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/empty_view_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:textColor="#666"
        android:textSize="14sp"
        android:visibility="gone" />

    <com.song.fast.widget.ButtonBgUi
        android:id="@+id/empty_view_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="点击重试"
        android:textColor="#EB5255"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:defaultColor="#fff"
        app:raoundRadius="25dp"
        app:strokeColor="#EB5255"
        app:strokeWidth="1dp" />
</LinearLayout>